<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    android:contentDescription="@string/menu_de_inicio_pantalla_principal"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_play"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:background="#ffffff"
        android:contentDescription="@string/boton_jugar"
        android:text="@string/jugar"
        app:layout_constraintBottom_toTopOf="@+id/button_instruccions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_instruccions"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="#ffffff"
        android:contentDescription="@string/instrucciones"
        android:text="@string/instrucciones"
        app:layout_constraintBottom_toTopOf="@+id/button_salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_salir"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:background="#ffffff"
        android:contentDescription="@string/boton_salir"
        android:text="@string/salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cartasBoton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="Cartas"
        app:layout_constraintBottom_toTopOf="@+id/button_instruccions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_play" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="317dp"
        android:layout_height="322dp"
        android:src="@drawable/imageninicio2"
        app:layout_constraintBottom_toTopOf="@+id/button_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>